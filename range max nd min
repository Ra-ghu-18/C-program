#include<stdio.h>
#include<conio.h>
void main()
{
    int i,num,max=0,min=9;
    clrscr();
    for(i=1;i<=7;i++){
        printf("enter the value:");
        scanf("%d",&num);
    }
    i=1;
    while(i<=7){
        if(num>max){
            max=num;
        }
        if(num<min){
            min=num;
        }
           i++;
        
    }
    printf("the difference is :%d",max-min);
    getch();
    
}
